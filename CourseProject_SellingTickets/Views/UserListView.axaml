<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:CourseProject_SellingTickets.ViewModels"
             xmlns:converter="clr-namespace:CourseProject_SellingTickets.Converters"
             xmlns:controls="clr-namespace:CourseProject_SellingTickets.Controls"
             xmlns:s="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="vm:UserListViewModel"
             x:Class="CourseProject_SellingTickets.Views.UserListView">
    
    <UserControl.Resources>
        <converter:InverseBooleanConverter x:Key="InverseBooleanConverter" />
        <converter:BlockDataFieldConverter x:Key="BlockDataFieldConverter" />
        <converter:InitializeDataErrorConverter x:Key="InitializeDataErrorConverter"/>
        <converter:CollectionHasItemsConverter x:Key="CollectionHasItemsConverter"/>
        <converter:TrimTextConverter x:Key="TrimTextConverter"/>
        <converter:FileMetaStringConverter x:Key="FileMetaStringConverter" />
        
        <s:Boolean x:Key="FalseValue">False</s:Boolean>
        <s:Boolean x:Key="TrueValue">True</s:Boolean>
    </UserControl.Resources>
    
    <SplitView IsPaneOpen="{Binding SideBarShowed}" 
               DisplayMode="Inline" PanePlacement="Right">
        
        <SplitView.Content>
            
            <DockPanel>
                
                <DockPanel Margin="10" DockPanel.Dock="Top">
                    <Label Content="Список пользователей" FontSize="30" />
                    
                    <Button Content="Обновить" 
                            DockPanel.Dock="Right" HorizontalAlignment="Right"
                            Margin="5 0 0 0"
                            Command="{Binding SearchUserDataCommand}" />
                    
                </DockPanel>
                
                <DockPanel Margin="10" DockPanel.Dock="Top">
                    
                    <DockPanel.IsEnabled>
                        <MultiBinding Converter="{StaticResource BlockDataFieldConverter}">
                            <Binding Path="IsLoading"/>
                            <Binding Path="DatabaseHasConnected"/>
                        </MultiBinding>
                    </DockPanel.IsEnabled>
                    
                    <Label FontSize="15" Content="Применить фильтр (не учитываются служебные роли)" DockPanel.Dock="Top"/>

                    <ComboBox DockPanel.Dock="Right" SelectedIndex="{Binding SelectedSearchMode}">
                        <ComboBoxItem>По логину</ComboBoxItem>
                        <ComboBoxItem>По имени</ComboBoxItem>
                        <ComboBoxItem>По дате рождения</ComboBoxItem>
                        <ComboBoxItem>По паспорту</ComboBoxItem>
                        <ComboBoxItem>По скидке</ComboBoxItem>
                        <ComboBoxItem>По ссылке аватара</ComboBoxItem>
                    </ComboBox>

                    <TextBox 
                        FontSize="15" Text="{Binding SearchTerm}"
                        DockPanel.Dock="Left" Watermark="Введите поисковый запрос.">
                        
                        <TextBox.KeyBindings>
                            <KeyBinding Gesture="Enter" Command="{Binding SearchUserDataCommand}"/>
                        </TextBox.KeyBindings>
                        
                    </TextBox>
                    
                </DockPanel>
                
                <StackPanel Margin="10" HorizontalAlignment="Right" DockPanel.Dock="Top">
                
                    <StackPanel.IsEnabled>
                        <MultiBinding Converter="{StaticResource BlockDataFieldConverter}">
                            <Binding Path="IsLoading"/>
                            <Binding Path="DatabaseHasConnected"/>
                        </MultiBinding>
                    </StackPanel.IsEnabled>
                    
                    <Label Content="Лимит записей" HorizontalAlignment="Right" />
                    
                    <NumericUpDown Width="200"
                                   Value="{Binding LimitRows}"
                                   HorizontalAlignment="Right"
                                   Watermark="Лимит записей"
                                   Minimum="-1"
                                   ParsingNumberStyle="Integer"
                                   FormatString="N0">
                            
                        <NumericUpDown.KeyBindings>
                            <KeyBinding Gesture="Enter" Command="{Binding SearchUserDataCommand}"/>
                        </NumericUpDown.KeyBindings>
                            
                    </NumericUpDown>
                    
                </StackPanel>
                
                <Grid>
                    
                    <controls:DoubleBounceSpinner 
                        IsActive="{Binding IsLoading}"
                        ForegroundSpinner="White"
                        Diameter="60"/>
                    
                    <Grid IsVisible="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}">
                    
                        <TextBlock 
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Foreground="Red"
                            Text="{Binding ErrorMessage}"
                            TextWrapping="WrapWithOverflow">
                            
                            <TextBlock.IsVisible>
                                <MultiBinding Converter="{StaticResource InitializeDataErrorConverter}">
                                    <Binding Path="HasErrorMessage"/>
                                    <Binding Path="DatabaseHasConnected"/>
                                </MultiBinding>
                            </TextBlock.IsVisible>
                            
                        </TextBlock>
                    
                        <Grid IsVisible="{Binding DatabaseHasConnected}">
                        
                            <TextBlock 
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="Orange"
                                Text="Данные не найдены"
                                TextWrapping="WrapWithOverflow">
                                
                                <TextBlock.IsVisible>
                                    <MultiBinding Converter="{StaticResource CollectionHasItemsConverter}" ConverterParameter="{StaticResource FalseValue}">
                                        <Binding Path="UserItems.Count"/>
                                        <Binding Path="HasErrorMessage" />
                                    </MultiBinding>
                                </TextBlock.IsVisible>
                                
                            </TextBlock>
                            
                            
                            <DataGrid
                                    HorizontalAlignment="Stretch" 
                                    VerticalAlignment="Stretch"
                                    ItemsSource="{Binding UserItems}"
                                    SelectedItem="{Binding SelectedUser}"
                                    IsReadOnly="True"
                                    CanUserResizeColumns="True"
                                    >
                                
                                <DataGrid.IsVisible>
                                    <MultiBinding Converter="{StaticResource CollectionHasItemsConverter}" ConverterParameter="{StaticResource TrueValue}">
                                        <Binding Path="UserItems.Count"/>
                                        <Binding Path="HasErrorMessage" />
                                    </MultiBinding>
                                </DataGrid.IsVisible>
                                
                                <DataGrid.Columns>
                                    
                                    <DataGridTemplateColumn Header="Действие">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                                    
                                                    <Button Content="Править" Margin="0 0 0 5"
                                                            IsEnabled="{Binding  Path=$parent[DataGrid].((vm:UserListViewModel)DataContext).IsLoadingEditMode, Converter={StaticResource InverseBooleanConverter}}"
                                                            Command="{Binding Path=$parent[DataGrid].((vm:UserListViewModel)DataContext).EditDataCommand}" />
                                                    
                                                    <Button Content="Удалить"
                                                            IsEnabled="{Binding  Path=$parent[DataGrid].((vm:UserListViewModel)DataContext).IsLoadingEditMode, Converter={StaticResource InverseBooleanConverter}}"
                                                            Command="{Binding Path=$parent[DataGrid].((vm:UserListViewModel)DataContext).DeleteUserDataCommand}" />
                                                    
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    
                                    <DataGridTextColumn Header="Логин пользователя" Binding="{Binding Login, Mode=OneTime} "/>
                                    <DataGridTextColumn Header="Имя пользователя" Binding="{Binding Name, Mode=OneTime} "/>
                                    <DataGridTextColumn Header="Дата рождения" Binding="{Binding BirthDay, Mode=OneTime} "/>
                                    <DataGridTextColumn Header="Паспортные данные" Binding="{Binding PassportVisual, Mode=OneTime} "/>
                                    <DataGridTextColumn Header="Баланс" Binding="{Binding Balance, StringFormat={}{0} руб., Mode=OneTime} "/>
                                    
                                    <DataGridTemplateColumn Header="Скидка" SortMemberPath="Discount.DiscountSize">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock VerticalAlignment="Center" Margin="10">
                                                    <Run Text="{Binding Discount.Name, Mode=OneTime}"/>
                                                    <LineBreak/>
                                                    <Run Text="{Binding Discount.Description, Mode=OneTime}"/>
                                                    <LineBreak/>
                                                    <Run Text="{Binding Discount.DiscountSize, StringFormat=Скидка: {0} %, Mode=OneTime}"/>
                                                </TextBlock>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    
                                    <DataGridTemplateColumn Header="Ссылка на аватар" SortMemberPath="UrlPath">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <Image Width="32" Height="32" Source="{Binding Photo.BitMapFromUrl^}" Margin="0 5 0 0"/>
                                                    <Label Content="{Binding Photo.UrlPath, Converter={StaticResource TrimTextConverter}}" VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    
                                </DataGrid.Columns>
                                
                            </DataGrid>   
                        </Grid>
                    </Grid>
                </Grid>
                
            </DockPanel>
            
        </SplitView.Content>
        
        <SplitView.Pane>
            <Border Background="#252525" 
                    Width="320">
                <ScrollViewer>
                    <StackPanel Margin="10">
                        
                        <DockPanel>
                            <Label Content="Изменить/Добавить изображение" FontSize="15"
                                   Margin="0 0 0 10" />
                            
                            <Button Content="x" HorizontalAlignment="Right" 
                                    VerticalAlignment="Top"
                                    Command="{Binding HideSideBarCommand}"
                                    />
                        </DockPanel>
                        
                        <Label Content="Id записи (не подлежит изменению)"
                               Margin="0 10 0 10"/>
                        <TextBox IsEnabled="False" 
                                 Text="{Binding SelectedUser.Id}" />
                        
                        
                        <Label Content="Логин пользователя" Margin="0 10 0 0"/>
                        <TextBox Text="{Binding SelectedUser.Login}" 
                                 Watermark="Укажите логин пользователя."/>
                        
                        <Label Content="Логин пользователя" Margin="0 10 0 0"/>
                        <TextBox Text="{Binding SelectedUser.Name}" 
                                 Watermark="Укажите имя пользователя."/>
                        
                        <Label Content="Пароль пользователя" Margin="0 10 0 0"/>
                        <TextBox Text="{Binding SelectedUser.NewUserPassword}"
                                 PasswordChar="*"
                                 Watermark="Укажите новый пароль пользователя."/>
                        
                        <Label Content="Баланс пользователя" Margin="0 10 0 0"/>
                        <TextBox Text="{Binding SelectedUser.Balance}" 
                                 Watermark="Укажите новый баланс."/>
                        
                        <Label Content="Баланс пользователя" Margin="0 10 0 0"/>
                        <CalendarDatePicker SelectedDate="{Binding SelectedUser.BirthDay, Mode=TwoWay}" 
                                            HorizontalAlignment="Stretch"
                                            Watermark="Укажите новый баланс."/>
                        
                        <Label Content="Паспортные данные" Margin="0 10 0 0"/>
                        <TextBox Text="{Binding SelectedUser.Passport}" 
                                 Watermark="Укажите новые паспортные данные."/>
                        
                        <Label Content="Вид скидки" Margin="0 10 0 0" />
                        <ComboBox 
                            ItemsSource="{Binding Discounts}"
                            SelectedValue="{Binding SelectedUser.Discount}"
                            HorizontalAlignment="Stretch" 
                            Margin="0 0 0 10"
                            PlaceholderText="Выберите вид скидки.">
                            
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding DiscountSize,StringFormat={}{0}%}" />
                                        <TextBlock Text="{Binding Description, StringFormat={} (Вид: {0})}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        
                        <ComboBox Margin="0 10 0 10"
                                  HorizontalAlignment="Stretch"
                                  PlaceholderText="Загрузка аватара"
                                  SelectedIndex="{Binding SelectedUploadFileMode}">
                            <ComboBox.Items>
                                <ComboBoxItem>Загрузка ссылкой</ComboBoxItem>
                                <ComboBoxItem>Загрузка файлом</ComboBoxItem>
                            </ComboBox.Items>
                        </ComboBox>
                    
                        <TextBox Height="25"
                                 HorizontalAlignment="Stretch"
                                 Margin="0 0 0 10"
                                 IsVisible="{Binding IsUrlInputVisible}"
                                 Watermark="Укажите прямую ссылку на изображение"
                                 Text="{Binding SelectedUser.NewPhotoUrl}" />
                
                        <StackPanel Margin="0 0 0 10"
                                    IsVisible="{Binding IsFileInputVisible}">
                            <Button Content="Выбрать изображение (FreeImageHost)"
                                    Margin="0 0 0 10"
                                    HorizontalContentAlignment="Center"
                                    HorizontalAlignment="Stretch"
                                    Command="{Binding ChoosePhotoCommand}"
                                    CommandParameter="{Binding $parent[TopLevel]}" />
                            
                            <TextBlock TextWrapping="WrapWithOverflow" 
                                       Text="{Binding SelectedUser.Photo.SelectedFilePhoto, Converter={StaticResource FileMetaStringConverter}, ConverterParameter='string'}"
                                       Foreground="{Binding SelectedUser.Photo.SelectedFilePhoto, Converter={StaticResource FileMetaStringConverter}, ConverterParameter='foreground'}"/>
                        </StackPanel>
                        
                        <TextBlock Margin="0 0 0 10"
                                   Foreground="OrangeRed" 
                                   Text="{Binding SelectedUser.ErrorValidations}" 
                                   FontSize="12"
                                   TextWrapping="WrapWithOverflow"
                                   IsVisible="{Binding SelectedUser.ValidationContext.IsValid, Converter={StaticResource InverseBooleanConverter}}"/>
                        
                        <Button Content="Сохранить" 
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Center"
                                IsEnabled="{Binding IsLoadingEditMode, Converter={StaticResource InverseBooleanConverter}}"
                                Margin="0 0 0 10"
                                Command="{Binding SaveUserDataCommand}" />
                        
                        <TextBlock Foreground="Red"
                                   Text="{Binding ErrorMessage}"
                                   TextWrapping="WrapWithOverflow"
                                   IsVisible="{Binding HasErrorMessage}"/>
                        
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </SplitView.Pane>
        
    </SplitView>
    
</UserControl>
