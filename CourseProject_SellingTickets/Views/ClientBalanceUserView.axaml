<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:vm="clr-namespace:CourseProject_SellingTickets.ViewModels"
             xmlns:converter="clr-namespace:CourseProject_SellingTickets.Converters"
             xmlns:controls="clr-namespace:CourseProject_SellingTickets.Controls"
             x:DataType="vm:ClientBalanceUserViewModel"
             x:Class="CourseProject_SellingTickets.Views.ClientBalanceUserView">
    
    <UserControl.Resources>
        <converter:ResultStateForegroundConverter x:Key="ResultStateForegroundConverter"/>
        <converter:InitializeDataErrorConverter x:Key="InitializeDataErrorConverter"/>
    </UserControl.Resources>
    
    <Grid>
        
        <controls:DoubleBounceSpinner 
            IsActive="{Binding IsLoading}"
            ForegroundSpinner="White"
            Diameter="60"/>
        
        <Grid IsVisible="{Binding !IsLoading}">
            
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Width="200">
                
                <StackPanel.IsVisible>
                    <MultiBinding Converter="{StaticResource InitializeDataErrorConverter}">
                        <Binding Path="HasErrorMessage"/>
                        <Binding Path="DatabaseHasConnected"/>
                    </MultiBinding>
                </StackPanel.IsVisible>
                
                <TextBlock 
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Foreground="Red"
                    Text="{Binding ErrorMessage}"
                    TextWrapping="WrapWithOverflow"
                    Margin="0 0 0 10"/>
                
                <Button Content="Обновить данные"
                        Width="200"
                        HorizontalAlignment="Center"
                        HorizontalContentAlignment="Center"
                        Command="{Binding LoadUserDataCommand}"/>
                
            </StackPanel>
                
            <Grid Margin="10">
                
                <Grid.IsVisible>
                    <MultiBinding Converter="{StaticResource InitializeDataErrorConverter}" ConverterParameter="inverse">
                        <Binding Path="HasErrorMessage"/>
                        <Binding Path="DatabaseHasConnected"/>
                    </MultiBinding>
                </Grid.IsVisible>
                
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="220"/>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="270"/>
                </Grid.ColumnDefinitions>
        
                <Grid.RowDefinitions>
                    <RowDefinition MaxHeight="35"/>
                    <RowDefinition MaxHeight="35"/>
                    <RowDefinition MaxHeight="35"/>
                    <RowDefinition MaxHeight="35"/>
                    <RowDefinition MaxHeight="35"/>
                    <RowDefinition MaxHeight="35"/>
                    <RowDefinition MaxHeight="50"/>
                    <RowDefinition MaxHeight="35"/>
                </Grid.RowDefinitions>
                                
                <StackPanel Grid.Row="0"
                            Grid.Column="1"
                            Grid.ColumnSpan="2">
                    
                    <Button HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Center"
                            Content="Обновить профиль"
                            Command="{Binding LoadUserDataCommand}"/>
                    
                    <Border Height="1" Background="White" Margin="0,5,0,0" />
                    
                </StackPanel>
                
                <Border Grid.Row="0" 
                        Grid.Column="0" 
                        Grid.RowSpan="6"
                        BorderThickness="2" 
                        CornerRadius="5"
                        Margin="0 0 10 0">
                    <Border.Background>
                        <ImageBrush Stretch="Fill" 
                                    Source="{Binding Photo.BitMapFromUrl^, Mode=OneTime}" /> 
                    </Border.Background>   
                </Border>
            
                <Label Content="Имя: " 
                       Grid.Column="1" 
                       Grid.Row="1" 
                       Margin="0 10 0 0"/>
        
                <Label Content="{Binding UserName}" 
                       Grid.Column="2"
                       Grid.Row="1" 
                       Margin="0 10 0 0"/>
                
                <Label Content="Дата рождения: " 
                       Grid.Column="1" 
                       Grid.Row="2"
                       Margin="0 10 0 0"
                       />
        
                <Label Content="{Binding BirthDay}" 
                       Grid.Column="2"
                       Grid.Row="2"
                       Margin="0 10 0 0"
                       />
                
                <Label Content="Паспортные данные: " 
                       Grid.Column="1" 
                       Grid.Row="3" 
                       Margin="0 10 0 0"
                       />
        
                <Label Content="{Binding Passport}" 
                       Grid.Column="2"
                       Grid.Row="3"
                       Margin="0 10 0 0"
                       />
        
                <Label Content="Баланс: " 
                       Grid.Column="1" 
                       Grid.Row="4"
                       Margin="0 10 0 0"
                       />
        
                <Label Content="{Binding Balance}" 
                       Grid.Column="2"
                       Grid.Row="4"
                       Margin="0 10 0 0"
                       />
                
                <Label Content="Ваша скидка: " 
                       Grid.Column="1" 
                       Grid.Row="5"
                       Margin="0 10 0 0"
                       />
        
                <Label Content="{Binding DiscountText}" 
                       Grid.Column="2"
                       Grid.Row="5"
                       Margin="0 10 0 0"
                       />
        
                <StackPanel Grid.Column="1" 
                        Grid.Row="6" 
                        Grid.ColumnSpan="2" 
                        Margin="0 10 0 10"
                        Orientation="Horizontal">
        
                    <NumericUpDown Margin="0 0 10 0" 
                                   Watermark="Сумма пополнения"
                                   Minimum="0"
                                   Width="135"
                                   Value="{Binding Amount}" />
            
                    <Button Content="Пополнить"
                            Margin="0 0 10 0"
                            Command="{Binding DepositBalanceUserCommand}" />
            
                    <Label Content="{Binding DepositBalanceMsg}"
                           FontSize="15" 
                           FontWeight="Bold"
                           Margin="0 0 0 0"
                           Foreground="{Binding ResultDepositBalance, Converter={StaticResource ResultStateForegroundConverter}, ConverterParameter='Foreground'}"
                           VerticalAlignment="Center" />
        
                </StackPanel>
            
                <ComboBox Grid.Row="6"
                          Grid.Column="0"
                          Margin="0 10 10 10"
                          HorizontalAlignment="Stretch"
                          PlaceholderText="Загрузка аватара"
                          SelectedIndex="{Binding SelectedUploadFileMode}"
                          >
                    <ComboBox.Items>
                        <ComboBoxItem>Загрузка ссылке</ComboBoxItem>
                        <ComboBoxItem>Загрузка файлу</ComboBoxItem>
                    </ComboBox.Items>
                </ComboBox>
                
                <Grid Grid.Row="7" 
                      Grid.Column="0" 
                      Grid.ColumnSpan="3"
                      ColumnDefinitions="*, 100"
                      HorizontalAlignment="Stretch"
                      IsVisible="{Binding IsUrlInputVisible}">
                    
                    <TextBox Grid.Column="0" 
                             Height="25"
                             Margin="0 0 10 0"
                             Watermark="Укажите прямую ссылку на изображение" 
                             Text="{Binding FileUrl}"/> 
                    
                    <Button Grid.Column="1" 
                            Content="Сохранить "
                            Command="{Binding SaveUserAvatarCommand}"/>
                    
                </Grid>
                
                <Button Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Grid.Row="7"
                        Content="Выбрать изображение (FreeImageHost)"
                        Margin="0 0 10 0"
                        HorizontalContentAlignment="Center"
                        HorizontalAlignment="Stretch"
                        IsVisible="{Binding IsFileInputVisible}"
                        Command="{Binding ChoosePhotoCommand}"
                        CommandParameter="{Binding $parent[TopLevel]}"/>
            
            </Grid>
            
        </Grid>
        
    </Grid>
    
</UserControl>
